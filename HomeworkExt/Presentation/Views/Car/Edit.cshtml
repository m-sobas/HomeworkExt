@using HomeworkExt.Core.Models.Domains;
@model CarViewModel

@{
	ViewData["Title"] = "Ogłoszenia";
}

<h1>Edycja ogłoszenia</h1>

<div class="filter-container">
	<form id="filterForm">
		<div class="form-row align-items-center">
			<div class="form-group">
				<input class="form-control" type="text" id="car-brand" name="car-brand" value="@Model.Car.Brand" placeholder="Marka pojazdu" />
			</div>
			<div class="form-group">
				<input class="form-control" type="text" id="car-model" name="car-model" value="@Model.Car.Model" placeholder="Model pojazdu" />
			</div>
			<div class="form-group">
				<input class="form-control" type="number" min="1900" max="9999" id="car-year" name="car-year" value="@Model.Car.Year" placeholder="Rok produkcji" />
			</div>
			<div class="form-group">
				@Html.DropDownListFor(x => x.Car.Fuel,
				Html.GetEnumSelectList(typeof(FuelType)), "-- wybierz rodzaj paliwa --", new { @class = "form-control mb-2" })
			</div>
			<div class="form-group">
				<input class="form-control" type="number" min="0" max="100000000" id="car-price" name="car-price" value="@Convert.ToInt32(@Model.Car.Price)" placeholder="Cena" />
			</div>
			<div class="form-group">
				<input class="form-control" type="file" id="car-image" name="car-image" />
			</div>

			<div class="col-auto"></div>

			<div class="col-auto">
				<button type="submit" class="button">Zapisz</button>
			</div>
		</div>
	</form>


</div>



